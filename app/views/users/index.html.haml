- title t('.page_title')
- seo_description t('.seo_description')
- seo_keywords t('.seo_keywords')

- content_for(:sidebar) do
  = render :partial => 'shared/user_status'
  = render :partial => 'shared/hashtag_filter'
  = render :partial => 'shared/trending_tags' 

.users_list
  %h2= t('user.title')

  .users
    - @users.each do |user|
      .tweet{:id => "tweet_users-#{user.id}"}
        .left-section
          = link_to image_tag(user.photo), twitter_path(user.screen_name), :target => "_blank"
          .follow
            - if current_user && current_user.follows_user?(user)
              = "following!"
            - else
              = link_to t('global.follow')

        .body
          = "@#{user.screen_name}"
          = "(#{user.name})"
          %span.when= t('user.created_at', :time => time_ago_in_words(user.created_at))
          //%br= user.location unless user.location.blank?
          //%br= link_to user.url, user.url, :target => "_blank" unless user.url.blank?
          .categories
            %b= t('global.categories')
            = user.categories.map { |category| link_to category.name, category }.join(', ')
        .clear
        .info{:id => "info_users-#{user.id}"}
          - if user.description
            .bio
              %b= t('global.bio')
              = user.description

          - if user.location
            .location
              %b= t('global.location')
              = user.location

          - if user.url
            .web
              %b= t('global.web')
              = link_to user.url, user.url

        .handle
          &nbsp;          
    %p
      = will_paginate @users
