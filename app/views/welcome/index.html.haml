- content_for(:sidebar) do
  #hashtag_filter
    %h2 #Fail
    = render :partial => 'tweets', :object => @filtered_tweets


#categories
  - @lists.each_with_index do |list, index|
    .category{:id => "category_#{list.id}"}
      %h2= link_to list.name, list
      .tabs
        = link_to_function t('category.tweets'), "switch_to_tweets('category_#{list.id}')", :class => 'tweets_link selected'
        = link_to_function t('category.users'), "switch_to_users('category_#{list.id}')", :class => 'users_link'
      = render :partial => 'tweets', :object => @lists_tweets[list.name]
      = render :partial => 'users', :object => @lists_users[list.name]
    - if (index + 1) % 2 == 0
      %div{:style => "clear:both"}
