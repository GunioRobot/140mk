!!! Strict
%html
  %head
    %meta{'http-equiv' => 'Content-Type', :content => 'text/html; charset=utf-8'}
    %title 140.mk :: Admin panel
    = stylesheet_link_tag 'web_app_theme', 'compiled/web_app_theme_override', 'themes/drastic-dark/style', :cache => true
  %body{:id => controller.controller_name + "_" + controller.action_name}
    #container
      #header
        %h1 <a href="/">140.mk</a>
        #user-navigation
          %ul.wat-cf
            %li= link_to 'Logout', logout_path, :class => 'logout'
        <div id="main-navigation">
        <ul class="wat-cf">
        %li{:class => controller.controller_path == 'admin/polls' ? 'active' : '' }
          %a{:href => admin_polls_path} Polls
        </ul>
        </div>
      #wrapper.wat-cf
        .flash
          - flash.each do |type, message|
            .message{:class => type.to_s}
              <p>#{ message }</p>
        #main
          = yield
          #footer
            .block
              <p>Copyright &copy; #{ Time.now.year } 140mk.</p>
        #sidebar
          = yield :sidebar

    = javascript_include_tag 'jquery-1.4.2.min', 'admin'
