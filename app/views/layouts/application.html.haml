!!! Strict
%html(xmlns="http://www.w3.org/1999/xhtml" xml:lang="en" lang="en")
  %head
    = stylesheet_link_tag 'compiled/grid.css', :media => 'screen, projection'
    = stylesheet_link_tag 'compiled/text.css', :media => 'screen, projection'
    = stylesheet_link_tag 'compiled/application.css', :media => 'screen, projection'
    = javascript_include_tag :defaults
    %link(rel="Shortcut Icon" type="image/x-icon" href="/favicon.ico")
    %title
      = G140[:site_name]
  %body.two-column
    #header
      .logo
        %h1= G140[:site_name]
      .navigation
        = render_navigation
        
    #main-content
      = yield

    #sidebar
      .content
        - unless signed_in?
          = link_to t('global.login'), session_path, :method => :post
        - else
          = "Yo #{link_to current_user.screen_name, my_tweets_path}!"
          %br
          = link_to t('category.tweets'), tweets_path
          |
          = link_to t('category.subscriptions'), subscriptions_path
          |
          = link_to t('global.logout'), session_path, :method => :delete

    #footer
      Место за футер