.tweet{:id => "tweet_#{name}-#{tweet.id}"}
  = link_to image_tag(tweet.user.photo), twitter_path(tweet.user.screen_name), :target => "_blank"
  .body
    %span.who= link_to h(tweet.user.screen_name), twitter_path(tweet.user.screen_name), :target => "_blank"
    %span.when= t('global.time_ago', :time => time_ago_in_words(tweet.created_at))
    .text= auto_link(tweet.text)
  - if signed_in?
    .actions
      %span.reply= link_to t('global.reply'), nil, :title => t('global.reply'), :id => "user_#{tweet.user.screen_name}", :class => "modalInput", :rel => "#tweet"
      %span.retweet= link_to t('global.retweet'), nil, :title => "RT", :id => "tweet_#{name}-#{tweet.id}", :class => "modalInput", :rel => "#tweet"
  .info{:id => "info_#{name}-#{tweet.id}"}
    .categories
      %b= t('global.categories')
      = tweet.user.lists.map { |list| link_to list.name, list }.join(', ')
    .bio
      %b= t('global.bio')
      = tweet.user.description
    .location
      %b= t('global.location')
      = tweet.user.location
    .web
      %b= t('global.web')
      = link_to tweet.user.url, tweet.user.url
    .when= t('user.created_at', :time => time_ago_in_words(tweet.user.created_at))
    
