- unless signed_in?
  .login
    = link_to image_tag('140priklucisebtn.png'), login_path, :method => :post
    .description
      = t('global.login_description')
      = link_to t('global.no_account'), 'https://twitter.com/signup'
- else
  .user
    .options
      = link_to image_tag(current_user.photo), twitter_path(current_user.screen_name), :target => "_blank"
      .greeting= "Yo #{link_to current_user.screen_name, twitter_path(current_user.screen_name), :target => "_blank"}!"
      .links
        = link_to t('global.tweet'), nil, :id => "tweet_link", :class => "modalInput", :rel => "#tweet"
        = link_to t('global.settings'), settings_path
        = link_to t('global.logout'), logout_path
      .clear