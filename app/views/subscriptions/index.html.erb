<h1><%= t('subscriptions.listing') %></h1>

<table>
  <tr>
    <th>User</th>
    <th>List</th>
  </tr>

<% @subscriptions.each do |subscription| %>
  <tr>
    <td><%=h subscription.user.screen_name %></td>
    <td><%=h subscription.list.name %></td>
    <td><%= link_to t('global.delete'), subscription, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to t('subscriptions.new'), new_subscription_path %>
