- content_for(:sidebar) do
  #create_list_from_category
    %h2= t('category.create_list_title')

    - if signed_in?
      - form_tag create_on_twitter_list_path(@list) do
        %div
          = label_tag :mode, t('twitter.list.private')
          = check_box_tag :mode
        %div
          = label_tag :name
          = text_field_tag :name, @list.name
        %div
          = submit_tag t('buttons.create')
    - else
      %p= t("category.create_list", :login => link_to(t('global.login'), login_path))

#category_show
  %h2= @list.name 

  .category
    .tweets
      %h2= t('title.last_tweets')
      - @tweets.each do |tweet|
        .tweet
          = link_to image_tag(tweet.user.photo), user_url(tweet.user.screen_name)
          .body
            = link_to h(tweet.user.screen_name), user_url(tweet.user.screen_name)
            %span.when= t('global.time_ago', :time => time_ago_in_words(tweet.created_at))
            = auto_link(tweet.text)
  .category
    .tweets
      %h2= t('title.last_members')
      - @users.each do |user|
        .tweet
          = link_to image_tag(user.photo), user_url(user.screen_name)
          .body
            = link_to h(user.screen_name), user_url(user.screen_name)
            %span.when= t('user.created_at', :time => time_ago_in_words(user.created_at))
