- content_for(:sidebar) do
  = render :partial => 'shared/user_status'

  #hashtag_filter
    %h2= t('global.failtag')
    .tweets{:id => "tweets_fail"}
      = render :partial => 'welcome/tweets', :locals => { :tweets => @filtered_tweets, :name => "category" }

.lists_list
  %h2
    = t('category.title')

  .lists
    - @lists.each do |list|
      .list
        .body
          = link_to list.name, list
          %span.when= t('global.time_ago', :time => time_ago_in_words(list.created_at))
          %br= "#{t('category.total')}: #{pluralize(list.subscriptions.size, t('global.member'))}"
    %p
      = will_paginate @lists
